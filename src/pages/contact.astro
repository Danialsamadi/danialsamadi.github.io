---
import Layout from "@/layouts/Layout.astro";
import Section from "@/components/Section.astro";

const EMAIL = "danisamadi11@gmail.com";

interface ContactMethod {
  name: string;
  value: string;
  link: string;
}

const contactMethods: ContactMethod[] = [
  {
    name: "Email",
    value: "danisamadi11@gmail.com",
    link: "mailto:danisamadi11@gmail.com",
  },
  {
    name: "GitHub",
    value: "github.com/Danialsamadi",
    link: "https://github.com/Danialsamadi",
  },
  {
    name: "LinkedIn",
    value: "linkedin.com/in/Danialsamadis",
    link: "https://linkedin.com/in/Danialsamadis",
  },
];
---

<Layout title="Contact Me">
  <Section title="Contact">
    <div class="max-w-3xl mx-auto space-y-12">
      <!-- Success Message -->
      <div id="success-message" class="hidden border-2 border-green-500 bg-green-500/10 p-6 rounded-lg">
        <div class="flex items-center gap-3">
          <svg class="w-6 h-6 text-green-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <div>
            <h3 class="text-xl font-bold text-green-400 mb-1">Message Sent Successfully!</h3>
            <p class="text-white/80">Thank you for reaching out. I'll get back to you as soon as possible.</p>
          </div>
        </div>
      </div>

      <!-- Contact Form -->
      <div class="border-2 border-white p-8 rounded-lg">
        <h2 class="text-3xl font-bold mb-6 text-center">Send me a message</h2>
        <form
          action="https://api.web3forms.com/submit"
          method="POST"
          class="space-y-6"
        >
          <!-- Web3Forms Access Key -->
          <input type="hidden" name="access_key" value="42a0278f-a9d6-4510-84ed-291243eb49dd" />
          
          <!-- Redirect after submission -->
          <input type="hidden" name="redirect" value="https://Danisdev.me/contact?success=true" />
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="name" class="block text-sm font-medium mb-2">
                Name
              </label>
              <input
                type="text"
                name="name"
                id="name"
                required
                class="w-full px-4 py-3 bg-white/10 border border-white/30 rounded-lg focus:outline-none focus:border-blue-400 focus:ring-2 focus:ring-blue-400/50 text-white placeholder-white/50"
                placeholder="Your name"
              />
            </div>
            <div>
              <label for="email" class="block text-sm font-medium mb-2">
                Email
              </label>
              <input
                type="email"
                name="email"
                id="email"
                required
                class="w-full px-4 py-3 bg-white/10 border border-white/30 rounded-lg focus:outline-none focus:border-blue-400 focus:ring-2 focus:ring-blue-400/50 text-white placeholder-white/50"
                placeholder="your.email@example.com"
              />
            </div>
          </div>
          
          <div>
            <label for="subject" class="block text-sm font-medium mb-2">
              Subject
            </label>
            <input
              type="text"
              name="subject"
              id="subject"
              required
              class="w-full px-4 py-3 bg-white/10 border border-white/30 rounded-lg focus:outline-none focus:border-blue-400 focus:ring-2 focus:ring-blue-400/50 text-white placeholder-white/50"
              placeholder="What's this about?"
            />
          </div>
          
          <div>
            <label for="message" class="block text-sm font-medium mb-2">
              Message
            </label>
            <textarea
              name="message"
              id="message"
              rows="6"
              required
              class="w-full px-4 py-3 bg-white/10 border border-white/30 rounded-lg focus:outline-none focus:border-blue-400 focus:ring-2 focus:ring-blue-400/50 text-white placeholder-white/50 resize-none"
              placeholder="Tell me about your project, opportunity, or just say hello!"
            ></textarea>
          </div>
          
          <button
            type="submit"
            class="w-full px-6 py-3 bg-white text-black font-semibold rounded-lg hover:bg-white/90 transition-all hover:scale-[1.02] shadow-lg"
          >
            Send Message
          </button>
        </form>
      </div>

      <!-- Contact Methods -->
      <div>
        <h2 class="text-3xl font-bold mb-6 text-center">Or reach out directly</h2>
        <div class="grid gap-6">
          {
            contactMethods.map((method) => (
              <a
                href={method.link}
                target="_blank"
                rel="noopener noreferrer"
                class="border-2 border-white p-6 rounded-lg hover:bg-white/5 transition-all hover:border-blue-400 flex items-center gap-4 group"
              >
                <div class="w-12 h-12 bg-white/10 rounded-lg flex items-center justify-center group-hover:bg-blue-400/20 transition-colors">
                  {method.name === "Email" && (
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                  )}
                  {method.name === "GitHub" && (
                    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                    </svg>
                  )}
                  {method.name === "LinkedIn" && (
                    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                    </svg>
                  )}
                </div>
                <div>
                  <h3 class="text-xl font-bold">{method.name}</h3>
                  <p class="text-white/80">{method.value}</p>
                </div>
              </a>
            ))
          }
        </div>
      </div>
    </div>
  </Section>
  
  <script>
    // Check for success parameter in URL
    const urlParams = new URLSearchParams(window.location.search);
    if (urlParams.get('success') === 'true') {
      const successMessage = document.getElementById('success-message');
      if (successMessage) {
        successMessage.classList.remove('hidden');
        // Scroll to success message
        successMessage.scrollIntoView({ behavior: 'smooth', block: 'start' });
        // Remove success parameter from URL without reload
        window.history.replaceState({}, document.title, window.location.pathname);
      }
    }
  </script>
</Layout> 