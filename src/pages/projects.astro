---
import Layout from "@/layouts/Layout.astro";
import Section from "@/components/Section.astro";

interface Project {
  title: string;
  description: string;
  tech: string[];
  link: string;
}

// You can add your projects data here
const projects: Project[] = [
{
    title: "Wi-Fi Scanner",
    description: "A Python tool to scan nearby Wi-Fi networks, extract SSIDs, and measure signal strength (dBm) using netsh on Windows.",
    tech: ["Python", "netsh"],
    link: "https://github.com/Danialsamadi/rssi",
  },{
    title: "Free-macos",
    description: "A macOS memory monitoring tool with real-time updates, visual progress bars, and customizable refresh intervals. Supports formatted output in B, KB, MB, or GB.",
    tech: ["Python", "Rich", "Click", "Poetry", "macOS"],
    link: "https://github.com/Danialsamadi/Free-macos",
  },
  {
    title: "Visual-Art",
    description: "A 3D visualization of a dynamic point cloud, bringing abstract mathematical concepts to life using trigonometric functions and vector mathematics.",
    tech: ["React.js", "Three.js"],
    link: "https://github.com/Danialsamadi/visualArt",
  },
];
---

<Layout title="My Projects">
  <Section title="Projects">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-6xl mx-auto">
      {
        projects.map((project) => (
          <div class="border-2 border-white p-6 rounded-lg hover:bg-white/5 transition-all">
            <h3 class="text-2xl font-bold mb-2">{project.title}</h3>
            <p class="text-white/80 mb-4">{project.description}</p>
            <div class="flex flex-wrap gap-2 mb-4">
              {project.tech.map((tech) => (
                <span class="px-2 py-1 bg-white/10 rounded-md text-sm">
                  {tech}
                </span>
              ))}
            </div>
            <a
              href={project.link}
              target="_blank"
              rel="noopener noreferrer"
              class="text-white hover:underline inline-flex items-center"
            >
              View Project
              <svg
                class="w-4 h-4 ml-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                />
              </svg>
            </a>
          </div>
        ))
      }
    </div>
  </Section>
</Layout> 